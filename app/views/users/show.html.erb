<!DOCTYPE html>
<html>
<head>
  <title><%= @user.fname %> <%= @user.lname %></title>
</head>
  <body>
    <div class="row">
    	<ol class="breadcrumb">
    	  <li><a href="<%= root_path %>">Home</a></li>
    	  <li><a href="<%= users_path %>">Users</a></li>
    	  <li class="active"><%= @user.fname %></li>
    	</ol>
    </div>
        
    <div class="row">
        <div class="col-xs-12 col-sm-2 col-md-4 col-lg-4">
      	    <img class="img img-responsive" src="" alt="No-Image">
        </div>
        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
          <h1><%= @user.fname %> <%= @user.lname %> <small>(<%= @user.email %>)</small></h1>
        </div>
          <div class="col-xs-12 col-sm-1 col-md-2 col-lg-2">
            <a type="button" class="btn btn-primary btn-sm" href="<%= edit_user_registration_path %>">Edit</a>
          </div>
    </div>
    <div class="container-fluid">
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      	<div class="panel panel-default">
          <div class="panel-heading">About</div>
          <div class="panel-body">
            <p class="lead">
              <%= @user.about %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="panel panel-default">
          <div class="panel-heading">Contact</div>
          <div class="panel-body">
            <p class="lead">
          	  Email: <%= @user.email %>
          	</p>
          </div>
        </div>
      </div>
    <div class="row">
  </body>
</html>