<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.1/paper/bootstrap.min.css" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div class="container=fluid">
        <div class="row">
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
              <div class="container">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand" href="<%= root_path %>">Rails Blog</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                    <li><%= link_to 'Home', root_path%></li>
                    <li><%= link_to 'New', new_article_path%></li>
                    <li><a href="#contact">Contact</a></li>
                  </ul>
              <form class="navbar-form navbar-right" role="form">
                <div class="form-group">
                    <% if user_signed_in? != true %>
                        <%= link_to "Login", new_user_session_path, :class => "btn btn-default" %>
                        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
                    <% end %>
                   <% if user_signed_in? %>
                    <%= link_to "Profile", current_user, :class => "btn btn-default btn-lg fa fa-user" %>
                    <%= link_to 'Sign out', destroy_user_session_path, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
                </div>
              </form>

                </div><!--/.nav-collapse -->
              </div>
            </nav>
        </div><br>
    <% if flash.alert || flash.notice %>
    <br>
    
    <div class="container">
        <div class="row">
            <% if flash.alert %>
                <h6 class="alert alert-danger alert-dismissible" role="alert">
                    <%= flash.alert %>
                </h6>
            <% end %>
            <% if flash.notice %>
                    <h6 class="alert alert-success alert-dismissible" role="alert">
                        <%= flash.notice %>
                    </h6>
            <% end %>
        </div>
    </div>
    <% end %>
</div>
    <div class="container">
      <div class="row">
	<div class="col-lg-12">
      <br>
      <br>
	  <%= yield %>
	</div>
      </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</body>
</html>
