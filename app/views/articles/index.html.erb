<html>
	<head>
		<title>Rails Blog</title>
	</head>
	<body>
		<div class="row">
			<% if user_signed_in? %>
				<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
			<% else %>
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<% end %>
				<div class="well">
					<% @articles.each do |article| %>
						<div class="media">
							<div class="media-left media-bottom">
								<% if article.feature_file_name %>									
									<%= link_to article_path(article) do %>
										<%= image_tag article.feature.url(:medium), class: "img img-responsive img-thumbnail media-object", size: "175" %>
									<% end %>
								<% end %>
							</div>
							<div class="media-body" style="padding-left: 10px;"><!-- Added some extra padding to bootstrap's media class -->
								<div class="media-heading"><strong><h1><a href="<%= article_path(article) %>" style="color: #000000;"><%= article.title %></a></h1></strong></div>
								<p><%= truncate(article.text, length: 600, omission: " [...]") %></p>
								<div class="btn-group">
									<a type="button" href="<%= article_path(article) %>" class="btn btn-primary">Read</a> 
									<% if user_signed_in? %>
										<% if current_user.id == article.user_id %>
											<a type="button" href="<%= edit_article_path(article) %>" class="btn btn-default">Edit</a>
										<% end %>
									<% end %>
								</div>
							</div>
						</div>
						<br>
					<% end %>
				</div>
			<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
			</div>
			<% if user_signed_in? %>
				<div class="hidden-xs hidden-sm col-md-4 col-lg-4">
					<div class="row">
						<form role="search" class="form-horizontal">
								<input type="text" placeholder="Search..." class="form-control">
								<button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i></button>
						</form>
					</div>
					<div class="row">
						<div class="panel panel-default">
							<div class="panel-heading">
								<i class="fa fa-star"></i> Featured Articles</div>
							<div class="panel-body">

							</div>
						</div>
					</div>
					<div class="row">
						<div class="panel panel-default">
							<div class="panel-heading"><i class="fa fa-comments"></i> Recent Comments</div>
							<div class="panel-body">
								<p>

								</p>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="panel panel-default">
							<div class="panel-heading"><i class="fa fa-server"></i> Categories</div>
							<div class="panel-body">
								<p>

								</p>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>		
	</body>
</html>