<html>
	<head>
		  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
		  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		  <%= javascript_include_tag :defaults %>
		  <%= csrf_meta_tags %>
		  <link href="/assets/stylesheets/css/yeti2-bootstrap.css" rel="stylesheet">
		  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
		<title>Blogr</title>
	</head>
	<body>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
				<% @articles.each do |article| %>
				<div class="col-md-4 col-lg-3">
					<% if article.feature_file_name %>									
						<%= link_to article_path(article) do %>
							<center><img src="<%= article.feature.url(:large) %>" class="img img-responsive img-thumbnail" width="90%" height="90%" alt="article-image" %><br>
							<h4 style="color: #000000; text-decoration: none;"><%= article.title %></h4></center>
						<% end %>
					<% end %><br>
					<center><a href="<%= article_path(article) %>"></a></center>
				</div>
				<% end %>
				<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
			</div>

			<div class="hidden-xs hidden-sm col-md-4 col-lg-4">
				<div class="row">
					<form role="search" class="form-inline">
						<input type="search" placeholder="Search..." class="form-control input-md">
						<span class="input-group-btn">
							<button type="submit" class="form-button btn btn-primary btn-md"><i class="fa fa-search"></i></button>
						</span>
					</form>
				</div><br>
				<div class="row">
					<div class="panel panel-default">
						<div class="panel-heading">
							<i class="fa fa-star"></i> Featured Article</div>
						<div class="panel-body">

						</div>
					</div>
				</div>
			</div>
		</div>		
	</body>
</html>