<html>
	<body>
		<br>
		<br>
		<div class="container-fluid">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 col-md-8 col-lg-8">
							<table class="table table-hover table-responsive"> 
								<% @articles.each do |article| %>
									<div class="media">
										<div class="media-body">
											<tr>
												
													<td>
														<p>
														<div class="media-heading"><h1><a href="<%= article_path(article) %>"><%= article.title %></a></h1></div>
														<p><%= article.text %></p>
														<div class="btn-group btn-group-justified">
															<a type="button" href="<%= article_path(article) %>" class="btn btn-primary">Read</a> 
															<a type="button" href="<%= edit_article_path(article) %>" class="btn btn-warning">Edit</a> 
															<%= link_to 'Delete', article_path(article), :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
														</div>
														</p>
													</td>
											</tr>
										</div>
									</div>
								<% end %>
							</table>
					<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
					</div>
					
					<div class="hidden-xs hidden-sm col-md-4 col-lg-4">
						<div class="panel panel-primary">
							<div class="panel-heading">
								About
							</div>
							<div class="panel-body">
								<p>
									Hello. My name is Chudi and this is my blog. Enjoy!
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>