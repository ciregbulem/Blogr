<html>
	<head>
		<title>Rails Blog</title>
	</head>
	<body>
		<div class="row">
			<% if user_signed_in? %>
				<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
			<% else %>
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<% end %>
				<div class="well well-lg">
					<table class="table table-responsive table-hover"> 
						
							<tr>
								<% @articles.each do |article| %>
								<td>
									<div class="media">
										<div class="media-left">
											<%= link_to article_path(article) do %>
												<%= image_tag article.feature.url(:thumb), class: "img img-responsive img-thumbnail" %>
											<% end %>
										</div>
									</div>
										<div class="media-body">
											<div class="media-heading"><h1><a href="<%= article_path(article) %>"><%= article.title %></a></h1></div>
											<p><%= truncate(article.text, length: 600, omission: " [...]") %></p>
											<div class="btn-group">
												<a type="button" href="<%= article_path(article) %>" class="btn btn-primary">Read</a> 
												<% if user_signed_in? %>
													<% if current_user.id == article.user_id %>
														<a type="button" href="<%= edit_article_path(article) %>" class="btn btn-default">Edit</a>
													<% end %>
												<% end %>
											</div>
										</div>

								</td>
							</tr>
						<% end %>
					</table>
				</div>
			<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
			</div>
			<% if user_signed_in? %>
				<div class="hidden-xs hidden-sm col-md-4 col-lg-4">
					<% if current_user.about != nil %>
						<div class="panel panel-primary">
							<div class="panel-heading">
								<i class="fa fa-users fa-2x"> Writers</i>
							</div>
							<div class="panel-body">
								<table class="table table-responsive">
									<tr>
											<td><h4>First Name</h4></td>
											<td><h4>Last Name</h4></td>
									</tr>
									<% @users.each do |user| %>

										<tr>
											<td><h6><%= user.fname %></h6></td>
											<td><h6><%= user.lname %></h6></td>
										</tr>
									<% end %>
								</table>
							</div>
						</div>
					<% end %>

					<div class="panel panel-primary">
						<div class="panel-heading">
							Contact
						</div>
						<div class="panel-body">
							<p>
								<h4><i class="fa fa-facebook-square"></i> <%= current_user.fname %> <%= current_user.lname %></h4>
								<!--<h4><i class="fa fa-twitter-square"> @DizzOnEm</i></h4>
								<h4><i class="fa fa-github-square"> ciregbulem</i></h4>-->
								<h4><i class="fa fa-envelope-square"></i> <%= current_user.email %></h4>
							</p>
						</div>
					</div>
				</div>
			<% end %>
		</div>		
	</body>
</html>