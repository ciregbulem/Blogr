      <div class="row">
        <div class="bg-primary img-rounded">
          <div class="text-center">
            <br>
            <%= image_tag @article.feature.url(:large), class: "img img-responsive img-thumbnail" %>
          </div>
          <div class="page-header text-center text-capitalize">
          	<h2><%= @article.title %><br><small>by: <%= User.find(@article.user_id).fname %> <%= User.find(@article.user_id).lname %></small></h2>
            <% if current_user.id == @article.user_id %>
              <div class="btn-group">
                <a type="button" class="btn btn-default btn-sm" href="<%= edit_article_path %>">Edit</a> <%= link_to 'Delete', article_path, :class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            <% end %>
          </div>
        </div>
