<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="panel panel-default">
    <div class="panel-body">
        <%= f.email_field :email, autofocus: true, placeholder: "Enter Email" %>

      <div class="field">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, label: "Password Confirmation", autocomplete: "off", placeholder: "Confirm Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
 </div>
<%= render "devise/shared/links" %>
